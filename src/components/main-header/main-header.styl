.mainHeader
	padding-top 36px

.mainLogo
	display flex
	
	
.mainLogo__img
	background-image url(../images/logo-img.png)
	width 36px
	height 36px
	margin-left 4px
	margin-right 16px
	
.mainLogo__caption
	h1
		color #434343
		font-family 'Ubuntu', sans-serif
		font-size 30px
		font-weight 500
		line-height 22px
	p
		margin 0
		opacity 0.65
		color #333333
		font-family 'Ubuntu', sans-serif
		font-size 12px
		font-weight 300
		line-height 20px
		text-transform uppercase
		letter-spacing 2.5px
		
.socials
	.socials__link
		font-size 16px
		color #000
		opacity 0.2
		padding-left 8px
		padding-right 8px
		&:hover
			opacity 1
	.socials__link-fb
		&:hover
			color #3b5bdb
	.socials__link-twit
		&:hover
			color #248cec
	.socials__link-rss
		&:hover
			color #e8590c
	.socials__link-in
		&:hover
			color #ffa94d
	.socials__link-skype
		padding-right 0
		&:hover
			color #3bc9db

.mainNav
	padding-top 36px
	padding-bottom 36px
				
.nav
	display flex
	justify-content space-between
	align-items center
	height 56px
	background-color #2a2d32
	color #fff
	overflow hidden
	box-shadow 0 12px 10px -10px rgba(0,0,0,0.5)
	
.nav__list
	.nav__link
		position relative
		font-family 'Ubuntu Condensed', sans-serif
		font-size 12px
		font-weight 400
		line-height 1
		text-transform uppercase
		padding 23px 41px
		border-right 1px solid #151515
		box-shadow 
		&:hover
			color #f4b60d
			
.nav__link
	&::after
		content ''
		position absolute
		background linear-gradient(to top, #ffffff 0%, #000101 100%)
		height 56px
		width 1px
		top 0
		right 0
		opacity 0.3
.nav__link-cart
	.fa-shopping-cart
		padding-right 5px
		font-size 16px
	&::before
		content ''
		position absolute
		background linear-gradient(to top, #ffffff 0%, #000101 100%)
		height 56px
		width 1px
		top 0
		left -1.5px
		opacity 0.3			

.nav__basket
	.nav__link
		position relative
		font-size 12px
		padding 23px 16px
		border-left 1px solid #151515

.nav__list			
	.nav__link-active
		border none
		background-color #248cec